<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_add">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="CONFIRM"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:padding="16dp"
        android:id="@+id/lo_confirm_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_title"
        app:layout_constraintStart_toStartOf="@id/cl_title"
        android:orientation="vertical">
        <LinearLayout
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Name: "/>
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/tv_confirm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Da Nang Trip"/>

        </LinearLayout>
        <LinearLayout
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination: "/>
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/tv_confirm_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Da Nang Trip"/>

        </LinearLayout>
        <LinearLayout
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "/>
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/tv_confirm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Da Nang Trip"/>

        </LinearLayout>
        <LinearLayout
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "/>
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/tv_confirm_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Da Nang Trip"/>

        </LinearLayout>
        <LinearLayout
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk assessment: "/>
            <TextView
                android:fontFamily="@font/lora_variablefont_wght"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/tv_confirm_risk_assessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Da Nang Trip"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/lo_confirm_info"
        app:layout_constraintTop_toBottomOf="@id/lo_confirm_info">

        <Button
            android:id="@+id/btn_cancel_confirm"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_add"
            android:text="CANCEL" />

        <Button
            android:id="@+id/btn_ok_confirm"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_add"
            android:text="OK" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>